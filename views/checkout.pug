include mixins/layoutPartions/_header
include mixins/layoutPartions/_footer
include mixins/components/_bannerInner
block userHead
    title= "Checkout"
+header()
+bannerInner('Complete purchase', false)
.checkout
    .container
        h3.title order information
        .checkout__information 
            p.column-name
                span product
                span subtotal
            p.product
                span Service And Support Package 6 Months  × 1	
                span.green-txt 250 €
            p.product
                span Service And Support Package 3 Months  × 1	
                span.green-txt 150 €
            p.subtotal
                span SUBTOTAL
                span.green-txt 400 €
            p.total
                span TOTAL
                span 
                    span.green-txt 400 € 
                    | (Includes 50 € VAT)
        h3.title Additional information
        form.additional(action="")
            textarea(placeholder='Notes about your order, e.g. special notes for delivery.')
            input#first.first-checkbox(type='checkbox' name='first' value='yes')
            label(for='first')  Yes, I'm ok with you sending me additional newsletter and email content (optional)
            input#second.second-checkbox(type='checkbox' name='second' value='yes')
            label(for='second')  Create an account?

            h3.title Your information
            .user-info 
                .contact 
                    h3.title contact details
                    .contact__form
                        input(type="text", name="" placeholder='First name')
                        input(type="text", name="" placeholder='Email@mail.com')
                        input(type="text", name="" placeholder='+380939333333')
                .delivery 
                    h3.title Delivery address
                    .delivery__form 
                        input(type="text", name="" placeholder='City')
                        input(type="text", name="" placeholder='Address')
                        input(type="text", name="" placeholder='Zip code')
            p.total 400 € 
            span.total-info total amount incl. VAT
            button.submit(type="submit") Complete purchase
            p.approve I approve of the 
                span.green-txt Payson terms
                | and the 
                span.green-txt Merchant conditions  
                |
                | by proceeding.
    
+footer()