mixin form(mount = {})
  .card.stacked-form
    .card-header
      h4.card-title Создание записи
    .card-body
      form(method='POST', action='/mount')
        input(type='hidden' name='id' value=mount && mount._id)
        .form-group
          label Заголовок
          input.form-control(type='text', name='title' value=mount && mount.title placeholder='Заголовок')
        .form-group
          label Описание (для переноса на другую строку скопируйте и вставьте следующее  - #{'<br/>'})
          input.form-control(type='text', name='desc' value=mount && mount.desc placeholder='Описание')
        //- .form-group
        //-   .form-check
        //-     label.form-check-label
        //-       if mount.visible === 'true'
        //-         input#inp.form-check-input(type='checkbox' value='' checked)
        //-       else
        //-         input#inp.form-check-input(type='checkbox' value='')
        //-       span.form-check-sign
        //-       | Опубликована
        //-       input#hidden(type='hidden', name='visible', value=`${mount.visible || 'false'}`)
        button.btn.btn-fill.btn-info(type='submit')
          | #{mount && mount._id ? 'Редактировать' : 'Создать'}
          i.fa.fa-check