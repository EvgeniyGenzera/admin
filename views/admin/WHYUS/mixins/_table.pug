mixin table(whyus = {})
  .card.table-with-links
    .card-header
      h4.card-title #{title} (3 записи макс.)
      if !whyus.length
        p Нету добавленных записей
      //- p.card-category Here is a subtitle for this table
    if whyus.length
      .card-body.table-full-width
        table.table
          thead
            tr
              th.text-center #
              th Заголовок
              th Описание
              th.text-right Действия
          tbody
            each w, index in whyus
              tr
                td.text-center #{index + 1}
                td #{w.title}
                td #{w.text}
                td.td-actions.text-right
                  //- a.btn.btn-info.btn-link.btn-xs(href='#', rel='tooltip', title='View Profile')
                  //-   i.fa.fa-user
                  a.btn.btn-success.btn-link.btn-xs(href=`/whyus/add/${w._id}`, rel='tooltip', title='Редактировать')
                    i.fa.fa-edit
                  a.btn.btn-danger.btn-link.btn-xs(href=`/whyus/delete/${w._id}`, rel='tooltip', title='Удалить')
                    i.fa.fa-times