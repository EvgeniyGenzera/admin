mixin form(data = {})
  .card.stacked-form
    .card-header
      h4.card-title Создание записи
    .card-body
      form(method='POST', action=`/admin/landing/add`)
        input(type='hidden' name='type' value='product')
        .row
          .col-md-12
            .form-group
              label Banner
              input.form-control(type='text', name='bannerTxt' value=data.bannerTxt placeholder='Banner')
            .form-group
              label Banner
              input.form-control(type='text', name='advantages[1]' value=data.bannerTxt placeholder='Banner')
        button.btn.btn-fill.btn-info(type='submit')
          | Create
          i.fa.fa-check